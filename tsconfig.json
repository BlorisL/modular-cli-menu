{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "outDir": "./dist",
        "strict": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@classes/*": ["src/classes/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@actions/*": ["src/actions/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "include": [
        "src/**/*",
        "plugins/**/*"
    ]
}